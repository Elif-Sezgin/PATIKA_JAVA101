import java.util.Scanner;
public class Calculator {
	public static void main(String[] args) {
		int number1;
		int number2;
		int selection;
		//Define the Scanner class
	    Scanner inp = new Scanner(System.in);
	    //Get value from user
	    System.out.print("Number1 : ");
	    number1 = inp.nextInt();
	    System.out.print("Number2 : ");
	    number2 = inp.nextInt();
	    System.out.print("İşlem Seçiniz 1-Toplama 2-Çıkartma 3-Bölme 4-Çarpma : ");
	    selection = inp.nextInt();
	    switch(selection) {
	    case 1:
	    	System.out.println("Sonuç = " + (number1 + number2));
	    	break;
	    case 2:
	    	System.out.println("Sonuç = " + (number1 - number2));
	    	break;
	    case 3:
	    	System.out.println("Sonuç = " + (number1 / number2));
	    	break;
	    case 4:
	    	System.out.println("Sonuç = " + (number1 * number2));
	    	break;
	    	
	    }
	}
}
